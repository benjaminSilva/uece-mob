<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.uece.br.mobuece.MenuPrincipal.FeedbackFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="@string/feedText"
                android:textAlignment="center"
                android:textColor="@color/darkGreen"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedbackText"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_shape_moreroundy"
                android:gravity="top"
                android:hint="TÃ­tulo"
                android:padding="10dp"
                android:textColorHint="@color/lightGreen" />

            <EditText
                android:id="@+id/edMensagem"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/edTitulo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_shape_moreroundy"
                android:gravity="top"
                android:hint="Mensagem"
                android:padding="10dp"
                android:textColorHint="@color/lightGreen" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edMensagem"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@drawable/buttongreen"
                android:drawableRight="@drawable/ic_action_sendwhite"
                android:padding="15dp"
                android:text="Enviar Mensagem"
                android:textColor="@color/white" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
